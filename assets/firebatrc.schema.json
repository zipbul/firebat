{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://firebat.dev/schemas/firebatrc.schema.json",
  "title": "Firebat Config (.firebatrc.jsonc)",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "features": {
      "type": "object",
      "description": "Per-feature enable/disable + feature-specific options. false disables. true enables with defaults. An object enables with explicit options (empty objects are allowed).",
      "additionalProperties": false,
      "properties": {
        "exact-duplicates": {
          "$ref": "#/$defs/exactDuplicatesToggle"
        },
        "barrel-policy": {
          "$ref": "#/$defs/barrelPolicyToggle"
        },
        "unknown-proof": {
          "$ref": "#/$defs/unknownProofToggle"
        },
        "format": { "$ref": "#/$defs/emptyToggle" },
        "structural-duplicates": {
          "$ref": "#/$defs/structuralDuplicatesToggle"
        },
        "forwarding": {
          "$ref": "#/$defs/forwardingToggle"
        },
        "waste": { "$ref": "#/$defs/wasteToggle" },
        "lint": { "$ref": "#/$defs/emptyToggle" },
        "typecheck": { "$ref": "#/$defs/emptyToggle" },
        "dependencies": { "$ref": "#/$defs/dependenciesToggle" },
        "coupling": { "$ref": "#/$defs/emptyToggle" },
        "nesting": { "$ref": "#/$defs/emptyToggle" },
        "early-return": { "$ref": "#/$defs/emptyToggle" },
        "noop": { "$ref": "#/$defs/emptyToggle" },
        "exception-hygiene": { "$ref": "#/$defs/emptyToggle" },
        "api-drift": { "$ref": "#/$defs/emptyToggle" },

        "implicit-state": { "$ref": "#/$defs/emptyToggle" },
        "temporal-coupling": { "$ref": "#/$defs/emptyToggle" },
        "symmetry-breaking": { "$ref": "#/$defs/symmetryBreakingToggle" },
        "invariant-blindspot": { "$ref": "#/$defs/emptyToggle" },
        "modification-trap": { "$ref": "#/$defs/emptyToggle" },
        "modification-impact": { "$ref": "#/$defs/emptyToggle" },
        "variable-lifetime": { "$ref": "#/$defs/variableLifetimeToggle" },
        "decision-surface": { "$ref": "#/$defs/decisionSurfaceToggle" },
        "implementation-overhead": { "$ref": "#/$defs/implementationOverheadToggle" },
        "concept-scatter": { "$ref": "#/$defs/conceptScatterToggle" },
        "abstraction-fitness": { "$ref": "#/$defs/abstractionFitnessToggle" },
        "giant-file": { "$ref": "#/$defs/giantFileToggle" }
      }
    },
    "mcp": {
      "description": "MCP tool overrides. Use 'inherit' to reuse root config. Per-feature values can be false | true | 'inherit' | {options} (empty objects are allowed).",
      "oneOf": [
        { "type": "string", "const": "inherit" },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "features": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "exact-duplicates": { "$ref": "#/$defs/exactDuplicatesInheritable" },
                "barrel-policy": { "$ref": "#/$defs/barrelPolicyInheritable" },
                "unknown-proof": { "$ref": "#/$defs/unknownProofInheritable" },
                "format": { "$ref": "#/$defs/emptyInheritable" },
                "structural-duplicates": { "$ref": "#/$defs/structuralDuplicatesInheritable" },
                "forwarding": { "$ref": "#/$defs/forwardingInheritable" },
                "waste": { "$ref": "#/$defs/wasteInheritable" },
                "lint": { "$ref": "#/$defs/emptyInheritable" },
                "typecheck": { "$ref": "#/$defs/emptyInheritable" },
                "dependencies": { "$ref": "#/$defs/dependenciesInheritable" },
                "coupling": { "$ref": "#/$defs/emptyInheritable" },
                "nesting": { "$ref": "#/$defs/emptyInheritable" },
                "early-return": { "$ref": "#/$defs/emptyInheritable" },
                "noop": { "$ref": "#/$defs/emptyInheritable" },
                "exception-hygiene": { "$ref": "#/$defs/emptyInheritable" },
                "api-drift": { "$ref": "#/$defs/emptyInheritable" },

                "implicit-state": { "$ref": "#/$defs/emptyInheritable" },
                "temporal-coupling": { "$ref": "#/$defs/emptyInheritable" },
                "symmetry-breaking": { "$ref": "#/$defs/symmetryBreakingInheritable" },
                "invariant-blindspot": { "$ref": "#/$defs/emptyInheritable" },
                "modification-trap": { "$ref": "#/$defs/emptyInheritable" },
                "modification-impact": { "$ref": "#/$defs/emptyInheritable" },
                "variable-lifetime": { "$ref": "#/$defs/variableLifetimeInheritable" },
                "decision-surface": { "$ref": "#/$defs/decisionSurfaceInheritable" },
                "implementation-overhead": { "$ref": "#/$defs/implementationOverheadInheritable" },
                "concept-scatter": { "$ref": "#/$defs/conceptScatterInheritable" },
                "abstraction-fitness": { "$ref": "#/$defs/abstractionFitnessInheritable" },
                "giant-file": { "$ref": "#/$defs/giantFileInheritable" }
              }
            }
          }
        }
      ]
    }
  },
  "$defs": {
    "minSize": {
      "oneOf": [{ "type": "string", "const": "auto" }, { "type": "integer", "minimum": 0 }]
    },
    "emptyToggle": {
      "description": "false disables; true enables.",
      "type": "boolean"
    },
    "emptyInheritable": {
      "description": "false disables; true enables; 'inherit' uses root.",
      "oneOf": [{ "type": "boolean" }, { "type": "string", "const": "inherit" }]
    },
    "dependenciesOptions": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "layers": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "name": { "type": "string", "minLength": 1 },
              "glob": { "type": "string", "minLength": 1 }
            },
            "required": ["name", "glob"]
          }
        },
        "allowedDependencies": {
          "type": "object",
          "additionalProperties": {
            "type": "array",
            "minItems": 1,
            "items": { "type": "string" }
          }
        }
      },
      "required": ["layers", "allowedDependencies"],
      "minProperties": 2
    },
    "dependenciesToggle": {
      "oneOf": [
        { "type": "boolean", "const": false },
        { "type": "boolean", "const": true },
        { "$ref": "#/$defs/dependenciesOptions" }
      ]
    },
    "dependenciesInheritable": {
      "oneOf": [
        { "type": "boolean", "const": false },
        { "type": "string", "const": "inherit" },
        { "type": "boolean", "const": true },
        { "$ref": "#/$defs/dependenciesOptions" }
      ]
    },
    "wasteToggle": {
      "oneOf": [
        { "type": "boolean", "const": false },
        { "type": "boolean", "const": true },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "memoryRetentionThreshold": { "type": "integer", "minimum": 0, "default": 10 }
          }
        }
      ]
    },
    "wasteInheritable": {
      "oneOf": [
        { "type": "boolean", "const": false },
        { "type": "boolean", "const": true },
        { "type": "string", "const": "inherit" },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "memoryRetentionThreshold": { "type": "integer", "minimum": 0, "default": 10 }
          }
        }
      ]
    },
    "exactDuplicatesToggle": {
      "oneOf": [
        { "type": "boolean", "const": false },
        { "type": "boolean", "const": true },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": { "minSize": { "$ref": "#/$defs/minSize", "default": "auto" } },
          "required": ["minSize"],
          "minProperties": 1
        }
      ]
    },
    "unknownProofToggle": {
      "oneOf": [
        { "type": "boolean", "const": false },
        { "type": "boolean", "const": true },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "boundaryGlobs": {
              "type": "array",
              "items": { "type": "string" },
              "minItems": 1
            }
          }
        }
      ]
    },
    "barrelPolicyToggle": {
      "oneOf": [
        { "type": "boolean", "const": false },
        { "type": "boolean", "const": true },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "ignoreGlobs": {
              "type": "array",
              "items": { "type": "string" },
              "minItems": 1,
              "description": "Additional ignore globs for barrel-policy. Default ignores are minimal: node_modules/** and dist/**."
            }
          }
        }
      ]
    },
    "structuralDuplicatesToggle": {
      "oneOf": [
        { "type": "boolean", "const": false },
        { "type": "boolean", "const": true },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": { "minSize": { "$ref": "#/$defs/minSize", "default": "auto" } },
          "required": ["minSize"],
          "minProperties": 1
        }
      ]
    },
    "forwardingToggle": {
      "oneOf": [
        { "type": "boolean", "const": false },
        { "type": "boolean", "const": true },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": { "maxForwardDepth": { "type": "integer", "minimum": 0, "default": 0 } },
          "required": ["maxForwardDepth"],
          "minProperties": 1
        }
      ]
    },
    "exactDuplicatesInheritable": {
      "oneOf": [
        { "type": "boolean", "const": false },
        { "type": "string", "const": "inherit" },
        { "type": "boolean", "const": true },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": { "minSize": { "$ref": "#/$defs/minSize", "default": "auto" } },
          "required": ["minSize"],
          "minProperties": 1
        }
      ]
    },
    "unknownProofInheritable": {
      "oneOf": [
        { "type": "boolean", "const": false },
        { "type": "string", "const": "inherit" },
        { "type": "boolean", "const": true },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "boundaryGlobs": {
              "type": "array",
              "items": { "type": "string" },
              "minItems": 1
            }
          }
        }
      ]
    },
    "barrelPolicyInheritable": {
      "oneOf": [
        { "type": "boolean", "const": false },
        { "type": "string", "const": "inherit" },
        { "type": "boolean", "const": true },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "ignoreGlobs": {
              "type": "array",
              "items": { "type": "string" },
              "minItems": 1,
              "description": "Additional ignore globs for barrel-policy. Default ignores are minimal: node_modules/** and dist/**."
            }
          }
        }
      ]
    },
    "structuralDuplicatesInheritable": {
      "oneOf": [
        { "type": "boolean", "const": false },
        { "type": "string", "const": "inherit" },
        { "type": "boolean", "const": true },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": { "minSize": { "$ref": "#/$defs/minSize", "default": "auto" } },
          "required": ["minSize"],
          "minProperties": 1
        }
      ]
    },
    "forwardingInheritable": {
      "oneOf": [
        { "type": "boolean", "const": false },
        { "type": "string", "const": "inherit" },
        { "type": "boolean", "const": true },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": { "maxForwardDepth": { "type": "integer", "minimum": 0, "default": 0 } },
          "required": ["maxForwardDepth"],
          "minProperties": 1
        }
      ]
    },

    "symmetryBreakingGroup": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": { "type": "string", "minLength": 1 },
        "glob": { "type": "string", "minLength": 1 },
        "exportPattern": { "type": "string", "minLength": 1 }
      },
      "required": ["name", "glob", "exportPattern"],
      "minProperties": 3
    },
    "symmetryBreakingOptions": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "groups": {
          "type": "array",
          "items": { "$ref": "#/$defs/symmetryBreakingGroup" },
          "minItems": 1
        }
      }
    },
    "symmetryBreakingToggle": {
      "oneOf": [
        { "type": "boolean", "const": false },
        { "type": "boolean", "const": true },
        { "$ref": "#/$defs/symmetryBreakingOptions" }
      ]
    },
    "symmetryBreakingInheritable": {
      "oneOf": [
        { "type": "boolean", "const": false },
        { "type": "string", "const": "inherit" },
        { "type": "boolean", "const": true },
        { "$ref": "#/$defs/symmetryBreakingOptions" }
      ]
    },

    "variableLifetimeToggle": {
      "oneOf": [
        { "type": "boolean", "const": false },
        { "type": "boolean", "const": true },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": { "maxLifetimeLines": { "type": "integer", "minimum": 0 } }
        }
      ]
    },
    "variableLifetimeInheritable": {
      "oneOf": [
        { "type": "boolean", "const": false },
        { "type": "string", "const": "inherit" },
        { "type": "boolean", "const": true },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": { "maxLifetimeLines": { "type": "integer", "minimum": 0 } }
        }
      ]
    },

    "decisionSurfaceToggle": {
      "oneOf": [
        { "type": "boolean", "const": false },
        { "type": "boolean", "const": true },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": { "maxAxes": { "type": "integer", "minimum": 0 } }
        }
      ]
    },
    "decisionSurfaceInheritable": {
      "oneOf": [
        { "type": "boolean", "const": false },
        { "type": "string", "const": "inherit" },
        { "type": "boolean", "const": true },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": { "maxAxes": { "type": "integer", "minimum": 0 } }
        }
      ]
    },

    "implementationOverheadToggle": {
      "oneOf": [
        { "type": "boolean", "const": false },
        { "type": "boolean", "const": true },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": { "minRatio": { "type": "number", "minimum": 0 } }
        }
      ]
    },
    "implementationOverheadInheritable": {
      "oneOf": [
        { "type": "boolean", "const": false },
        { "type": "string", "const": "inherit" },
        { "type": "boolean", "const": true },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": { "minRatio": { "type": "number", "minimum": 0 } }
        }
      ]
    },

    "conceptScatterToggle": {
      "oneOf": [
        { "type": "boolean", "const": false },
        { "type": "boolean", "const": true },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": { "maxScatterIndex": { "type": "integer", "minimum": 0 } }
        }
      ]
    },
    "conceptScatterInheritable": {
      "oneOf": [
        { "type": "boolean", "const": false },
        { "type": "string", "const": "inherit" },
        { "type": "boolean", "const": true },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": { "maxScatterIndex": { "type": "integer", "minimum": 0 } }
        }
      ]
    },

    "abstractionFitnessToggle": {
      "oneOf": [
        { "type": "boolean", "const": false },
        { "type": "boolean", "const": true },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": { "minFitnessScore": { "type": "number" } }
        }
      ]
    },
    "abstractionFitnessInheritable": {
      "oneOf": [
        { "type": "boolean", "const": false },
        { "type": "string", "const": "inherit" },
        { "type": "boolean", "const": true },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": { "minFitnessScore": { "type": "number" } }
        }
      ]
    },

    "giantFileToggle": {
      "oneOf": [
        { "type": "boolean", "const": false },
        { "type": "boolean", "const": true },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": { "maxLines": { "type": "integer", "minimum": 0 } }
        }
      ]
    },
    "giantFileInheritable": {
      "oneOf": [
        { "type": "boolean", "const": false },
        { "type": "string", "const": "inherit" },
        { "type": "boolean", "const": true },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": { "maxLines": { "type": "integer", "minimum": 0 } }
        }
      ]
    }
  }
}
