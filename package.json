{
  "name": "firebat",
  "module": "index.ts",
  "bin": {
    "firebat": "./dist/firebat.js"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/firebat.js"
    },
    "./oxlint-plugin": {
      "import": "./dist/oxlint-plugin.js"
    }
  },
  "scripts": {
    "build": "bun run scripts/build.ts",
    "deps": "bunx depcruise -c ./.dependency-cruiser.cjs src index.ts oxlint-plugin.ts",
    "firebat": "bun dist/firebat.js --log-level trace",
    "firebat:install": "bun dist/firebat.js install",
    "firebat:update": "bun dist/firebat.js update",
    "firebat:fix": "bun dist/firebat.js --fix --log-level trace",
    "firebat:agent": "bun dist/firebat.js --format json --no-exit --log-level error --fix",
    "firebat:ci": "bun dist/firebat.js --format json --log-level debug",
    "db:generate": "bunx -y drizzle-kit generate --config ./drizzle.config.ts",
    "db:migrate": "bunx -y drizzle-kit migrate --config ./drizzle.config.ts",
    "coverage": "bun test --coverage",
    "lint": "oxlint src index.ts oxlint-plugin.ts --config .oxlintrc.jsonc",
    "format": "oxfmt . --config .oxfmtrc.jsonc --check",
    "prepare": "husky",
    "knip": "knip"
  },
  "dependencies": {
    "@ast-grep/napi": "^0.40.5",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@typescript/native-preview": "^7.0.0-dev.20260213.1",
    "drizzle-orm": "^0.45.1",
    "fastbitset": "^0.4.1",
    "oxc-parser": "^0.115.0",
    "oxfmt": "^0.32.0",
    "oxlint": "^1.47.0",
    "oxlint-tsgolint": "^0.11.5",
    "table": "^6.9.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@types/bun": "^1.3.9",
    "@types/fastbitset": "^0.2.2",
    "@zipbul/result": "^0.0.3",
    "dependency-cruiser": "^17.3.8",
    "drizzle-kit": "^0.31.9",
    "husky": "^9.1.7",
    "knip": "^5.83.1",
    "lint-staged": "^16.2.7"
  }
}
