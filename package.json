{
  "name": "firebat",
  "module": "index.ts",
  "bin": {
    "firebat": "./dist/firebat.js"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/firebat.js"
    },
    "./oxlint-plugin": {
      "import": "./dist/oxlint-plugin.js"
    }
  },
  "scripts": {
    "build": "bun run scripts/build.ts",
    "deps": "bunx depcruise -c ./.dependency-cruiser.cjs src index.ts oxlint-plugin.ts",
    "firebat": "bun dist/firebat.js",
    "firebat:fix": "bun firebat --fix --log-level trace",
    "firebat:agent": "bun firebat --format json --no-exit --log-level error --fix",
    "firebat:ci": "bun firebat --format json --log-level error",
    "db:generate": "bunx -y drizzle-kit generate --config ./drizzle.config.ts",
    "db:migrate": "bunx -y drizzle-kit migrate --config ./drizzle.config.ts",
    "test": "bun test",
    "prepare": "husky",
    "knip": "knip"
  },
  "dependencies": {
    "@ast-grep/napi": "^0.40.5",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@typescript/native-preview": "^7.0.0-dev.20260206.1",
    "drizzle-orm": "^0.45.1",
    "fastbitset": "^0.4.1",
    "oxc-parser": "^0.112.0",
    "oxfmt": "^0.28.0",
    "oxlint": "^1.43.0",
    "oxlint-tsgolint": "^0.11.4",
    "table": "^6.9.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@types/bun": "^1.3.8",
    "@types/fastbitset": "^0.2.2",
    "@types/node": "^25.2.1",
    "dependency-cruiser": "^17.3.7",
    "drizzle-kit": "^0.31.8",
    "husky": "^9.1.7",
    "knip": "^5.83.0",
    "lint-staged": "^16.2.7"
  }
}
